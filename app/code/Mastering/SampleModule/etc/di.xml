<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="masteringAddItem" xsi:type="object">Mastering\SampleModule\Console\Command\AddItem</item>
            </argument>

            <argument name="commands" xsi:type="array">
                    <item name="masteringSearchItem" xsi:type="object">Mastering\SampleModule\Console\Command\ItemSearch</item>
            </argument>

        </arguments>
    </type>
    <preference for="Mastering\SampleModule\Api\Data\ItemInterface" type="Mastering\SampleModule\Model\Item" />
    <preference for="Mastering\SampleModule\Api\Data\ItemSearchResultsInterface" type="Magento\Framework\Api\SearchResults" />
    <preference for="Mastering\SampleModule\Api\ItemRepositoryInterface" type="Mastering\SampleModule\Model\ItemRepository" />
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="mastering_items_grid_data_source" xsi:type="string">Mastering\SampleModule\Model\ResourceModel\Item\Grid\Collection</item>
            </argument>
        </arguments>
    </type>

    <!-- Replace the debug file in all the classes -->

   <!-- <preference for="Magento\Framework\Logger\Handler\Debug" type="Mastering\SampleModule\Model\DebugHandler"></preference>-->


    <!-- Replace the Debug file in just the classes uses Monlog -->

    <!--<type name="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="handlers"  xsi:type="array">
                <item name="debug" xsi:type="object">Mastering\SampleModule\Model\DebugHandler</item>
            </argument>
        </arguments>
    </type>-->

    <!-- Replace the debug file in just the logger in the command line -->
   <virtualType name="Mastering_Logger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="name" xsi:type="string">main</argument>
            <argument name="handlers"  xsi:type="array">
            <item name="system" xsi:type="object">Magento\Framework\Logger\Handler\System</item>
            <item name="debug" xsi:type="object">Mastering\SampleModule\Model\DebugHandler</item>
            <item name="syslog" xsi:type="object">Magento\Framework\Logger\Handler\Syslog</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Mastering\SampleModule\Console\Command\AddItem">
        <arguments>
            <argument name="logger" xsi:type="object">Mastering_Logger</argument>
        </arguments>
    </type>

</config>
